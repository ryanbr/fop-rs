# FOP Configuration File
# Place in current directory or ~/.fopconfig

# Skip commit prompt
no-commit = false

# Skip uBO to ABP option conversion
no-ubo-convert = false

# Skip commit message format validation (M:/A:/P:)
no-msg-check = false

# Process all files (ignore IGNORE_FILES/IGNORE_DIRS)
disable-ignored = false

# Skip sorting (only tidy and combine rules)
no-sort = false

# Alternative sorting (by selector for all rule types)
alt-sort = false

# Sort hosts file entries (0.0.0.0/127.0.0.1 domain)
localhost = false

# Disable colored output
no-color = false

# Keep empty lines in output
keep-empty-lines = false

# uBO ||com/filter support
ignore-dot-domains = false

# Disable large change warning prompt
no-large-warning = false

# Create .backup files before modifying
backup = false

# Comment line prefixes (default: !)
comments = !

# Files to skip short domain check (comma-separated, partial names)
disable-domain-limit =

# Output warnings to file instead of stderr (leave empty for stderr)
warning-output =

# Additional directories to ignore (comma-separated)
ignoredirs =

# Additional files to ignore (comma-separated, partial names supported)
ignorefiles = .json,.backup,.bak,.swp,.gz,.sh,.mjs,.js,warnings.txt

# Supported file extensions for scanning
file-extensions = txt
